<!-- Layout for list items in the search results.
 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">

    <LinearLayout
    	android:id="@+id/search_restaurant_title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">

	    <TextView
	        android:id="@+id/search_restaurant_name"
	        style="@android:style/TextAppearance.Large"
	        android:layout_width="0px"
	        android:layout_height="wrap_content"
		    android:layout_weight="100"
	        android:paddingRight="10dp"
	        android:text="@string/sample_name"
        	android:layout_alignParentLeft="true" />
		    
	    <!-- Layout for restaurant rating -->
	    <LinearLayout
	    	android:id="@+id/search_restaurant_rating"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="horizontal"
	        android:paddingTop="3dp">

			    <ImageView
			        android:id="@+id/comf1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/pleasant" />
			    <ImageView
			        android:id="@+id/comf1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/pleasant" />
			    <ImageView
			        android:id="@+id/comf1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/pleasant" />
			    <ImageView
			        android:id="@+id/comf1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/pleasant" />
			    <ImageView
			        android:id="@+id/comf1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:src="@drawable/pleasant" />
		    </LinearLayout>

	</LinearLayout>

	<RelativeLayout
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	    
	    <TextView
	        android:id="@+id/search_restaurant_summary"
	        style="@android:style/TextAppearance.Small"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="modern - Carte: 21£/34£" />

	    <TextView
	        android:id="@+id/search_restaurant_distance"
	        style="@android:style/TextAppearance.Small"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="0.5km"
        	android:layout_alignParentRight="true" />
	</RelativeLayout>
    
    <TextView
        android:id="@+id/search_restaurant_description"
        style="@android:style/TextAppearance.Small"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="@string/sample_description" />

</LinearLayout>
